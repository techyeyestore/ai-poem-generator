  <script>

    const form = document.querySelector('form');
    const input = document.querySelector('#topic');
    const poemContainer = document.querySelector('#poem');
    const submitButton = document.querySelector('button[type="submit"]');

    form.addEventListener('submit', function (event) {
      event.preventDefault();

      // Disable the submit button and change the text
      submitButton.disabled = true;
      submitButton.innerHTML = 'Generating poem<span class="loading-dots">.</span>';

      // Get the topic from the input field
      const topic = input.value.trim();
      const strWithoutSpaces = topic.replace(/\s+/g, '');
      const lengthWithoutSpaces = strWithoutSpaces.length;
      const prompt = `write acrostic poem on string "${topic}". generate only ${lengthWithoutSpaces} lines`
      let  change_css= document.getElementById("outer-div");
      // Send the API request to generate a poem
      fetch(`/generate?prompt=${encodeURIComponent(prompt)}`)
        .then(response => response.text())
        .then(poem => {
          const lines = poem.trim().split('\n');
          change_css.style.setProperty("height", "auto");
          change_css.style.setProperty("padding-top", "100px");
          // Add the <span> tag around the first letter of each line
          const formattedLines = lines.map(line => {
            const firstLetter = line.charAt(0);
            const restOfLine = line.slice(1);
            return `<span style="font-weight:bold">${firstLetter}</span>${restOfLine}`;
          });

          // Join the lines back into a single string and display the generated poem
          poemContainer.innerHTML = formattedLines.join('<br>');


          // Display the generated poem

          // Re-enable the submit button and change the text back to "Generate Poem"
          submitButton.disabled = false;
          submitButton.innerHTML = 'Generate Poem';
        })
        .catch(error => {
          console.error(error);
          poemContainer.innerHTML = '<p>An error occurred. Please try again later.</p>';
          // Re-enable the submit button and change the text back to "Generate Poem"
          submitButton.disabled = false;
          submitButton.innerHTML = 'Generate Poem';
        });
    });

    // Animate the loading dots
