  <script>

    const form = document.querySelector('form');
    const input = document.querySelector('#topic');
    const poemContainer = document.querySelector('#poem');
    const submitButton = document.querySelector('button[type="submit"]');

    form.addEventListener('submit', function (event) {
      event.preventDefault();

      // Disable the submit button and change the text
      submitButton.disabled = true;
      submitButton.innerHTML = 'Generating poem<span class="loading-dots">.</span>';

      // Get the topic from the input field
      const topic = input.value.trim();
      const prompt = `Write a poem about ${topic}. in easy to understand english language. poem should be unique.`
      let  change_css= document.getElementById("outer-div");
      // Send the API request to generate a poem
      fetch(`/generate?prompt=${encodeURIComponent(prompt)}`)
        .then(response => response.text())
        .then(poem => {
          // Display the generated poem
          poemContainer.innerHTML = `<p>${poem}</p>`;



          // Set the CSS properties using the setProperty() method
          change_css.style.setProperty("height", "auto");
          change_css.style.setProperty("padding-top", "100px");
          // Re-enable the submit button and change the text back to "Generate Poem"
          submitButton.disabled = false;
          submitButton.innerHTML = 'Generate Poem';
        })
        .catch(error => {
          console.error(error);
          poemContainer.innerHTML = '<p>An error occurred. Please try again later.</p>';
          // Re-enable the submit button and change the text back to "Generate Poem"
          submitButton.disabled = false;
          submitButton.innerHTML = 'Generate Poem';
        });
    });

